{
  "name": "todo-cli",
  "version": "1.0.0",
  "description": "My Todo-cli application",
  "main": "todo.js",
  "scripts": {
    "test": "jest todo-cli/__tests__/todo.js",
    "prepare": "cd .. && husky install todo-cli/.husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"

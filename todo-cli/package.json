      "prettier --write .",
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Atharva Mude <atharvamude124@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4"
  }
}